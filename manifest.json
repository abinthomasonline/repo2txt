{
  "manifest_version": 3,
  "name": "GitHub to Plain Text Converter",
  "description": "Convert GitHub repositories to plain text files easily. Transform code into a single formatted text file.",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "clipboardWrite",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://api.github.com/*",
    "https://github.com/*"
  ],
  "web_accessible_resources": [{
    "resources": ["js/o200k_base.js"],
    "matches": ["<all_urls>"]
  }]
} 